				<TagChange character="0" tag = "isFighting" target="*1*" type="character"/>
				<TagChange character="1" tag = "isFighting" target="*0*" type="character"/>
				<StoryChange Action="+5" Tension="+10" /> 
			</EffectSet>
		</CharacterEffects>
	</EventNode>


