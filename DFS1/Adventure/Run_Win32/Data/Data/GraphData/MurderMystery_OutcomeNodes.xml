	<OutcomeNode name="LearnsSomething" chanceToPlace=".3" progression="interact" actRange="2">
		<Characters>
			<Character id = "*0*" name="investigator"/>
		</Characters>
		<CharacterRequirements>
			<Character index="0">
				<Requirement tag="isAlive" target="true"/>
