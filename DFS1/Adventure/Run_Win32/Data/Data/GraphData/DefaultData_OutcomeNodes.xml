			<Character id = "*0*"/>
		</Characters>
		<Actions>
			<Action text="*0* makes it home safely" endsAct="true">
				<EffectSet>
					<Modifier character = "0" multiplier = "10.00"> 
						<CharacterRequirements>
							<Requirement tag="isLucky" target="true"/>
						</CharacterRequirements>
					</Modifier>
					<TagChange character="*0*" tag="isHome" target="true" />
