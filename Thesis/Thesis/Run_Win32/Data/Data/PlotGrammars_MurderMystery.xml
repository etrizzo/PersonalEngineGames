	<PlotGrammar>
		<!-- *[X]* indicates a character name who should be replaced at rutntime -->
		<Action text="A man is murdered." />
		<Characters>
			<Character id = "*0*" title="killer"/>
			<Character id = "*1*" title="murderweapon" />
			<Character id = "*2*" title="murderroom" />
		</Characters>
		<CharacterRequirements>
			<Character index="0">
				<Requirement tag="isAlive" target="true"/>
			</Character>

			<Character index="1">
				<Requirement tag="isWeapon" target="true"/>
			</Character>

			<Character index="2">
				<Requirement tag="isRoom" target="true"/>
			</Character>
		</CharacterRequirements>
		<StoryEffects>
			<EffectSet chance="default">
				<TagChange character="0" hasTag = "isKiller" target="true"/>
				<TagChange character="1" hasTag = "isMurderWeapon" target="true"/>
			</EffectSet>
		</StoryEffects>
	</PlotGrammar>



	<PlotGrammar>
		<Action text="*0* investigates *1*" />
			<Character id = "*0*" title="investigator"/>
			<Character id = "*1*" title="room" />
			<Character id = "*2*" title="murderroom" />
		<Characters>

		</Characters>
	</PlotGrammar>